       <option>SSC</option>
       <option>HSC</option>
       <option>B.tech/B.Sc.IT./BSc.Computer Science/B.Sc.</option>
       <option>M.tech/M.Sc.IT./M.Sc.Computer Science/M.Sc.</option>
       <option>Phd</option>
    </select>
    </td>

    <td><%= edu.label :'Passing Status' %><br />
     <select name="education[marks_class]">
