       <option>In-Progress</option>
       <option>Fail</option>
     </select></td>

    <td><%= edu.label :'Year Of Passing' %><br />
        <%= edu.date_select :year %></td>

  </tr>
</div>
  <% end %>

</table>
</fieldset>

