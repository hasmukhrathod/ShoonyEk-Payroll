<%= form_for(@leave_management) do |f| %>
  <% if @leave_management.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@leave_management.errors.count, "error") %> prohibited this leave_management from being saved:</h2>
      <ul>
      <% @leave_management.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<table>

<tr>
  <td><%= f.label :'Select Name Of the Employee' %><br />
  <%= f.collection_select :employee_master_id, EmployeeMaster.find(:all), :id , :emp_name %>  </td>

  <td><%= f.label :'Type Of The Leave' %><br />
    <select name="leave_management[leave_type]">
      <option>Paid Leave</option>
      <option>Public Holiday</option>
      <option>Restricted Leave</option>
      <option>Loss Of Pay</option>
  </select>
</td><br />

</tr>

<tr>
    <td><%= f.label :'leave_from: ' %><br />
    <%= f.date_select :leave_taken_on_date %></td>
    <td><%= f.label :'leave_till_date:' %><br />
    <%= f.date_select :leave_till_date %></td>
</tr>

<tr>
    <td><%= f.label :'Alternate Contact Number' %><br />
    <%= f.text_field :alternate_contact_number, :placeholder => "Type Employees Altername Contact Number" %></td>
</tr><br />

<p>
    <td><%= f.label :'Leave description' %><br />
    <%= f.text_area :description, :size =>"50x4", :placeholder => "Reason for the Leave ..... " %></td>
</p><br />

<tr>
  <td><%= f.submit %></td>
</tr>
<% end %>
</table>
